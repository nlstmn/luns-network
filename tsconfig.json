{
    "compilerOptions": {
        "outDir": "./dist/",
        "resolveJsonModule": true,
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "module": "commonjs",
        "target": "esnext",
        "jsx": "react",
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "include": [
        "./src/**/*",
        "src/components",
        "src/custom.d.ts"
    ],
    "typeRoots": [
        "node_modules/@types"
    ]
}